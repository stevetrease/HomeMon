extends layout

block content
	script(src="/javascripts/jquery-2.0.2.min.js")
	script(src='javascripts/bootstrap/js/bootstrap.min.js')
	script(src="/socket.io/socket.io.js")
	script(src="/javascripts/sensors.js")
	
	

	div.container.well
		div.row
			div.span4
				| <H1 class="text-center text-warning">now</h1>
			div.span4
				| <H1 class="text-center">hour</H1>
			div.span4
				| <H1 class="text-center">today</H1>
		div.row
			div.span4
				| <H1 class="text-center text-warning"><span id="sensors/power/0"> </span>W</h1>
			div.span4
				| <H1 class="text-center"><span id="sensors/power/0/cumulative/hour"></span> KWh</H1>
			div.span4
				| <H1 class="text-center"><span id="sensors/power/0/cumulative/daily"></span> KWh</H1>
		div.row
			div.span4
				| <H1 class="text-center text-warning"><span id="sensors/snmp/router/total/rate"> </span> Mbps</h1>
			div.span4
				| <H1 class="text-center"><span id="sensors/snmp/router/total/cumulative/hour"></span></H1>
			div.span4
				| <H1 class="text-center"><span id="sensors/snmp/router/total/cumulative/daily"></span></H1>
		div.row
			div.span2
				h4.text-center Power
				| <table id="myTablePower" class="table table-striped table-condensed table-bordered">
				| <tr><th>Topic</th><th style="text-align: right">Value</th></tr>
				| <tr><td id="sensors/power/Uname" style="text-align: left; width: 75%;">Unknown</td><td id="sensors/power/U" style="text-align: right; width: 25%;">0</td></tr>
				| </table>				
			div.span2
				h4.text-center Temperature
				| <table id="myTableTemp" class="table table-striped table-condensed table-bordered">
				| <tr><th>Topic</th><th style="text-align: right">Value</th></tr>
				| </table>
							
			div.span2
				h4.text-center Pressure
				| <table id="myTablePressure" class="table table-striped table-condensed table-bordered">
				| <tr><th>Topic</th><th style="text-align: right">Value</th></tr>
				| </table>

			div.span2
				h4.text-center Humidity
				| <table id="myTableHumidity" class="table table-striped table-condensed table-bordered">
				| <tr><th>Topic</th><th style="text-align: right">Value</th></tr>
				| </table>
				
			div.span2
				h4.text-center NO2
				| <table id="myTableNO2" class="table table-striped table-condensed table-bordered">
				| <tr><th>Topic</th><th style="text-align: right">Value</th></tr>
				| </table>
				
			div.span2
				h4.text-center CO
				| <table id="myTableCO" class="table table-striped table-condensed table-bordered">
				| <tr><th>Topic</th><th style="text-align: right">Value</th></tr>
				| </table>
				
		div.row
			div.span4
				div.thumbnail
					| <A HREF="http://www.trease.eu/rrdtool/currentcost.htm"><img src="http://www.trease.eu/rrdtool/graphs/currentcost-1d.png" alt=""></A>
			div.span4
				div.thumbnail
					| <A HREF="http://www.trease.eu/rrdtool/temperature.htm"><img src="http://www.trease.eu/rrdtool/graphs/temperature-1d.png" alt=""></A>
			div.span4
				div.thumbnail
					| <A HREF="http://www.trease.eu/rrdtool/humidity.htm"><img src="http://www.trease.eu/rrdtool/graphs/humidity-1d.png" alt=""></A>
		div.row
			div.span6
				#time
			div.span6.text-right
				#updates
				
				
				
		